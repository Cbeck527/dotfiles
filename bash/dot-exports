# general
export TERMINFO_DIRS="$TERMINFO_DIRS:$HOME/.local/share/terminfo"

# export TERM=xterm-256color
export CLICOLOR=1
export EDITOR=vim
export PAGER="less -q"

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Donâ€™t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Avoid issues with `gpg` as installed via Homebrew.
# https://stackoverflow.com/a/42265848/96656
export GPG_TTY=$(tty);

# Increase Bash history size. Allow unlimited entries.
# https://stackoverflow.com/a/12234989
export HISTSIZE=-1
export HISTFILESIZE=-1
# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';
# Show date and time
export HISTTIMEFORMAT="[%F %T] "

# Python
export PYTHONDONTWRITEBYTECODE=1

# FZF (fuzzy finder) if present, and setup commands
# Auto-completion
# [[ $- == *i* ]] && source "$(/opt/homebrew/bin/brew --prefix)/opt/fzf/shell/completion.bash" 2> /dev/null
# Key bindings
# source "$(/opt/homebrew/bin/brew --prefix)/opt/fzf/shell/key-bindings.bash"
export FZF_DEFAULT_COMMAND='
    (git ls-tree -r --name-only HEAD ||
    ag -g "") 2> /dev/null'
export FZF_DEFAULT_OPTS="
    --no-height
    --color fg:-1,bg:-1,hl:136,fg+:254,bg+:-1,hl+:136
    --color info:136,prompt:136,pointer:230,marker:230,spinner:136
"
export FZF_CTRL_R_OPTS="--preview 'echo {}' --preview-window down:3:hidden:wrap --bind '?:toggle-preview'"

# Good tagging
export GTAGSLABEL=pygments

# Better k9s
export K9SCONFIG="${HOME}/.k9s"

# git
export GIT_MERGE_AUTOEDIT=0

# bat
export BAT_CONFIG_PATH="${HOME}/.bat"

# atuin
export ATUIN_CONFIG_DIR="${HOME}/.atuin"

# Local Variables:
# mode: shell-script
# End:
