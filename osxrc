# OS X specific aliases

alias apcycle='networksetup -setairportpower en1 off && networksetup -setairportpower en1 on'
alias dnscache='dscacheutil -flushcache'
alias e='emacs -nw'
alias f='fab'
alias o.="open ."
alias v='vagrant'

# change my terminal colors
function solarized {
    if [ "$ITERM_PROFILE" = solarized-dark ]
    then
        echo -e "\033]50;SetProfile=solarized-light\a"
        export ITERM_PROFILE=solarized-light
    else
        echo -e "\033]50;SetProfile=solarized-dark\a"
        export ITERM_PROFILE=solarized-dark
    fi
}

# good ol compiling things
export CFLAGS=-Qunused-arguments
export CPPFLAGS=-Qunused-arguments

# rvm fun
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# GOLANG!
export GOPATH=$HOME/go
PATH=$PATH:$HOME/go/bin

# Homebrew fun
export HOMEBREW_NO_ANALYTICS=1

# GPG Setup
if test -f ~/.gnupg/.gpg-agent-info -a -n "$(pgrep gpg-agent)"; then
  source ~/.gnupg/.gpg-agent-info
  export GPG_AGENT_INFO
  GPG_TTY=$(tty)
  export GPG_TTY
else
  eval $(gpg-agent --daemon --write-env-file ~/.gnupg/.gpg-agent-info)
fi

# if LaTeX, then add it to the path
if [ -d "/Library/TeX/Root/bin/x86_64-darwin/" ]; then
  export PATH=$PATH:/Library/TeX/Root/bin/x86_64-darwin
fi
